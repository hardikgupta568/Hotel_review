<%-include("../partials/header")%>


    <div class="container m-3">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Hotel</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 3</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card">
                    <img class="img-responsive" id="show-img" src="<%=hotel.image %> " alt="">
                    <div class="card-body">
                        <div class="caption-full">
                            <h4 class="text-right">$
                                <%=hotel.price%>/night</h4>
                            <h4>
                                <a href="">
                                    <%=hotel.name%>
                                </a>
                            </h4>
                            <p>
                                <%= hotel.description %>
                            </p>
                            <p>
                                <em>Submitted By:- <%= hotel.author.username %> </em>
                            </p>
                            <% if(currUser &&hotel.author.id.equals(currUser._id)) {%>
                                <a class="btn btn-warning text-light" href="/hotels/<%= hotel._id %>/edit ">Edit</a>
                                <form id="delete-form" action="/hotels/<%= hotel._id %>?_method=delete " method="POST">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                                <%}  %>
                        </div>
                    </div>
                </div>
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="text-right mb-2">
                            <a class="btn btn-success" href="/hotels/<%= hotel._id %>/comments/new">Add New Comment</a>
                        </div>
                        <% for( var index = 0; index < hotel.comments.length; index++ ) { %>
                            <div class="row">
                                <div class="col-md-12">
                                    <strong><%=hotel.comments[index].author.username%></strong>
                                    <span style="float:right;">10 days ago</span>
                                    <p>
                                        <%= hotel.comments[index].text %>
                                    </p>
                                    <% if(currUser &&hotel.comments[index].author.id.equals(currUser._id)) {%>
                                        <a class="text-light btn-xs btn btn-warning" href="/hotels/<%= hotel.id %> /comments/<%= hotel.comments[index].id %>/edit ">edit</a>
                                        <form id="delete-form" action="/hotels/<%= hotel.id %>/comments/<%= hotel.comments[index].id %>?_method=delete" method="POST">
                                            <button class="btn btn-danger">DELTE</button>
                                        </form>
                                        <%}  %>

                                </div>

                            </div>

                            <% } %>
                    </div>
                </div>

            </div>
        </div>
    </div>