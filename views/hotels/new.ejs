<%-include("../partials/header")%>
    <div class="container">
        <div style="width:30%;margin:20px auto;">
            <h3>Create a new Hotel to display</h3>
            <form action="/hotels" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image Url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Price" name="price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/hotels">GO BACK</a>
        </div>
    </div>


    <%-include("../partials/footer")%>