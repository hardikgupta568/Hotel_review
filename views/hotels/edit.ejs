<%-include("../partials/header")%>
    <div class="container">
        <div style="width:30%;margin:20px auto;">
            <h3>Edit
                <%= hotel.name %>
            </h3>
            <form action="/hotels/<%= hotel._id %>?_method=put" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[name]" value="<%= hotel.name %> ">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= hotel.image %> " name="hotel[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[description]" value="<%= hotel.description %> ">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="http://localhost:3000/hotels">GO BACK</a>
        </div>
    </div>


    <%-include("../partials/footer")%>